<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ic_brainstorm"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/brainstorm_title"
        android:src="@drawable/ic_brainstorm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/brainstorm_title"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/ic_brainstorm"
        app:layout_constraintStart_toEndOf="@id/ic_brainstorm"
        app:layout_constraintTop_toTopOf="@id/ic_brainstorm" />

</androidx.constraintlayout.widget.ConstraintLayout>